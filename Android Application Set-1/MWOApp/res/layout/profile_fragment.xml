<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    

    tools:context="com.ad.app.ad.SplashActivity" >
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bkimg"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/imgHightwidth2"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textSize="@dimen/textsize2" />
    </RelativeLayout>

    
</LinearLayout>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="2" >
<TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding1"
        android:textSize="@dimen/textsize2"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="About Us" />
    <TextView
        android:id="@+id/txt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding3"
        android:layout_margin="@dimen/padding1"
        android:textSize="@dimen/textsize2"
        android:text="The business belongs to the famous B.K.Roy group of Companies which comprises of Pallishree Limited, Birbhum Chemicals and Fertilizer Limited, B.K.Roy Private Limited, Pallishree Nursery and Landscape Private Limited, Pallishree Agri Biotech Private Limited, which are leading names in India’s Agri-Horticultural economy. The group was established in 1948 by legendary freedom fighter and philanthropist Late Balai Krishna Roy (1918 – 1996)" />

</LinearLayout>
</RelativeLayout>
