<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="oval"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#20534e" />
             <gradient  android:angle="-90"  android:startColor="#062d30" android:endColor="#4c898e"  />           
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="oval"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#20534e" />
             <solid  android:color="#125156"/>      
         </shape>
     </item> 
    <item >
         <shape android:shape="oval"  >
             <corners android:radius="4dip" />
          
             <stroke android:width="1dip" android:color="@color/white" />
             <gradient  android:angle="-90"  android:startColor="@color/circle_defaultcolor" android:endColor="@color/circle_defaultcolor" 
                 
                 /> 
                    
         </shape>
     </item>
</selector>