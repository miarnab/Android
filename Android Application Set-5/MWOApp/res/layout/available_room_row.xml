<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
   
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:padding="@dimen/padding1"
        android:orientation="horizontal"
        android:weightSum="2" >

        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.2"
            >
            <ImageView 
                android:id="@+id/img"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/greenvag"
                android:scaleType="fitXY"
                />
        </LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
                    android:layout_weight="0.8"
                    android:paddingLeft="@dimen/padding1"
                    android:gravity="center"
                    android:orientation="vertical"
            >
            <TextView 
                android:id="@+id/hnam"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/textsize3"
                android:text="Hotel Name"
                />
            <TextView 
                android:id="@+id/ads"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Rate"
                android:textStyle="bold"
                   android:textSize="@dimen/textsize3"
                />
            <TextView 
                android:id="@+id/str"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="2 siter"
                android:textStyle="bold"
                   android:textSize="@dimen/textsize3"
                />
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="@dimen/padding2"
                >
            <TextView 
                android:id="@+id/rat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate"
                android:textStyle="bold"
                android:textColor="@color/white"
                   android:textSize="@dimen/textsize3"
                />
            </LinearLayout>
            <RatingBar android:id="@+id/ratingstart"
android:layout_width="wrap_content"
android:visibility="gone"
                                style="@style/customRatingBar"
android:layout_height="@dimen/margin7" 
 android:numStars="5"
           />

            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                >
                <TextView 
                    android:id="@+id/bookbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding3"
                android:text="Add cart"
                android:layout_marginRight="@dimen/padding1"
                android:textColor="@color/white"
                   android:textSize="@dimen/textsize3"
                android:background="@drawable/button_style2"
                android:textStyle="bold"
                />
            </LinearLayout>
             
        </LinearLayout>
    </LinearLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        android:background="@drawable/toolbar_dropshadow"
        />

</LinearLayout>
