<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    tools:context="com.ad.app.ad.SplashActivity" >
 <LinearLayout 
        android:id="@+id/hometb"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/header_height"
    android:orientation="horizontal"
    android:weightSum="2"
    >
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
               android:background="@color/banner_text_color"
        android:orientation="horizontal"
        >
        <ImageView 
            android:layout_width="@dimen/margin5"
            android:layout_height="@dimen/margin5"
            android:src="@drawable/home"
            />
    <TextView 
        android:id="@+id/txthom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/padding2"
        android:background="@color/banner_text_color"
        android:textSize="@dimen/textsize3"
android:text="Home"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/aroundmebtn"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
               android:background="@color/white"
        android:orientation="horizontal"
        >
        <ImageView 
            android:layout_width="@dimen/margin5"
            android:layout_height="@dimen/margin5"
            android:src="@drawable/bluearound"
            />
    <TextView 
        android:id="@+id/metxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
      
        android:textSize="@dimen/textsize3"
         android:layout_marginLeft="@dimen/padding2"
android:text="Around Me"/>
    </LinearLayout>
</LinearLayout>
<View
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/hometb"
            android:background="@drawable/toolbar_dropshadow" />
</RelativeLayout>
