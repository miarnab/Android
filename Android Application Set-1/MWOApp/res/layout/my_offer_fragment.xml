    android:gravity="center_vertical"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
<LinearLayout 
    android:id="@+id/offer1"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/register__edit_text"
    android:orientation="horizontal"
    android:layout_margin="@dimen/padding2"
    android:paddingLeft="@dimen/padding2"
    android:weightSum="3"
    android:gravity="center_vertical"
  android:background="@drawable/whiteroundedbutton"
    >
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_weight="1.2"
        android:layout_height="wrap_content"
        android:src="@drawable/offericon"
        />
<TextView 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
android:layout_weight="0.6"
    android:text="50% off for New User"
 android:textSize="@dimen/textsize3"
    android:textColor="@color/white"
    android:layout_margin="@dimen/padding2"
    android:paddingLeft="@dimen/padding3"
    />
 <ImageView 
     android:id="@+id/offerarro"
        android:layout_width="fill_parent"
        android:layout_weight="1.2"
        android:layout_height="wrap_content"
        android:src="@drawable/arrows_dwn"
        />
</LinearLayout>
<LinearLayout 
